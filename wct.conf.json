{
  "plugins": {
    "local": {
      "browsers": [ "chrome" ]
    },
    "sauce": {
      "browsers": [
        {
          "browserName":  "safari",
          "platform":     "OS X 10.13",
          "version":      "11.1"
        },
        {
          "browserName":  "chrome",
          "platform":     "OS X 10.13"
        },
        {
          "browserName":  "firefox",
          "platform":     "OS X 10.13"
        }
      ]
    },
    "istanbub": {
      "dir": "./reports/coverage",
      "reporters": ["text", "text-summary", "lcov"],
      "include": [
        "**/*.html",
        "**/*.js"
      ],
      "exclude": [
        "**/*polyfill*",
        "**/bin/*",
        "**/bower_components/**/*",
        "**/demo/*",
        "**/locales/*",
        "**/node_modules/**/*",
        "**/reports/*",
        "**/test/*"
      ],
      "thresholds": {
        "global": {
          "statements": 90,
          "branches": 75,
          "functions": 80,
          "lines": 85
        }
      }
    },
    "size-limit": {
      "path": "wc-i18n.html",
      "limitNoPolymer": "5 KB",
      "limitNoExternals": "5 KB"
    }
  }
}
